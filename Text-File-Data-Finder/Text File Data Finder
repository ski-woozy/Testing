import re

#Project Title
print("\nProject Title: Text File Data Finder")

def lineCounter (fileHandle):
    fileHandle.seek(0)
    lineCount = 0
    for _ in fileHandle:
        lineCount += 1
    return lineCount

def charCounter(fileHandle):
    fileHandle.seek(0)
    chars = fileHandle.read()
    _ = len(chars)
    return _

#User-Program Interaction
fName = input('\nType the file name or its directory to access the file\n> ')

try:
    fHand = open(fName)
except:
    print('\nUnable to access the file ', fName)
    quit()

print('\nFile Information\n----------------', '\nLine Count: ', lineCounter(fHand), '\nCharacter Count: ', charCounter(fHand))
    
actions = input('\nInput the data content you want to display (Sender, Subject, Content)\n> ')
actions = actions.lower()
actionArr = actions.split()
actionArrClean = []

for word in actionArr:
    cleanWord = str('')
    for letter in word:
        if letter.isalpha():
            cleanWord += letter
    actionArrClean.append(cleanWord)
    
for line in fHand:
    line = line.rstrip()
    for action in actionArrClean:
        if action == 'sender' and re.search('^From:', line) or action == 'subject' and re.search('^Subject:', line) or action == 'content' and re.search('^Content:', line):
            print(line)