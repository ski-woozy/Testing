import random

# "rock ðŸª¨", "paper ðŸ“„", "scissors âœ‚"

# RPS Game Mechanics --------
# Rock beats Scissors, Scissors beats Paper, Paper beats Rock
# User inputs R, P, or S to choose their move
# Computer randomly selects its move
# Determine winner and display result
# Prompt user to play again or exit

#Project Title
print('Project Title: R.P.S Game\n')

#Welcome Msg
print('Welcome to the Rock-Paper-Scissor Game!')

def get_computer_choice():
    choices = ["rock ðŸª¨", "paper ðŸ“„", "scissors âœ‚"]
    return random.choice(choices)

while True:
    computerChoice = get_computer_choice()
    userChoice = input("\nEnter your choice (R for Rock, P for Paper, S for Scissors): ").upper()
    if userChoice not in ['R', 'P', 'S']:
        while userChoice not in ['R', 'P', 'S']:
            userChoice = input('Invalid input, try (R for Rock, P for Paper, S for Scissors): ').upper()
    else:
        choice_map = {
            'R': "rock ðŸª¨",
            'P': "paper ðŸ“„",
            'S': "scissors âœ‚"
        }

        if choice_map[userChoice] == computerChoice:
            print(f"\nBoth players selected {choice_map[userChoice]} , it's a tie!")
        elif choice_map[userChoice] != computerChoice:
            if choice_map[userChoice] == "rock ðŸª¨" and computerChoice  == "scissors âœ‚" or choice_map[userChoice] == "paper ðŸ“„" and computerChoice  == "rock ðŸª¨" or choice_map[userChoice] == "scissors âœ‚" and computerChoice  == "paper ðŸ“„":
                print(f"\nPlayer chose {choice_map[userChoice]}  and Bot chose {computerChoice}. You won!")
            else:
                print(f"\nPlayer chose {choice_map[userChoice]}  and Bot chose {computerChoice}. You lost!")
                
    tryAsk = input('\nTry again? (Y/N): ').upper()
    
    if tryAsk == 'N':
        print('\nThank you for playing!\n')
        quit()
    elif tryAsk == 'Y':
        continue
    else:
        while tryAsk not in ['N', 'Y']:
            tryAsk = input("Invalid Choice, Choose Y/N:").upper()